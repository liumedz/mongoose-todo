doctype html
html(lang="en_US")
    head
        title= title
        link(rel='stylesheet', href='/stylesheets/libs/bootstrap/less/bootstrap.css')
        link(rel='stylesheet', href='/stylesheets/style.css')
    body
        .btn-group
            button(type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown") #{t('app.selectlanguage')}
                span(class="caret")
            ul(class="dropdown-menu" role="menu")
                li
                    a#lt(href='?setLng=lt-LT')= t('app.lithuanian')
                li
                    a#en(href='?setLng=en-US')= t('app.english')

        block content

        block scripts
            script(src="/js/libs/jquery/dist/jquery.js")
            script(src="/js/libs/bootstrap/dist/js/bootstrap.js")
            script(src="/js/libs/angular/angular.js")
            script(src="/js/libs/angular-resource/angular-resource.js")
            script(src="/js/libs/angular-route/angular-route.js")
            script(src="/js/app/admin/admin.js")
            script(src="/js/app/todos/todos.js")
            script(src="/js/app/app.js")
